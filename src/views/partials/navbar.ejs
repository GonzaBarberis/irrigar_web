<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<style>
    .navbar {
        width: 100%;
        height: 470px;
        margin: auto;
        position: relative;
        /* background-image: linear-gradient(to left, rgba(0, 0, 0, 0.2) 10%, rgba(0, 0, 0, 0) 100%), url('/navbar/Inicio.jpg'); */
        background-image: linear-gradient(to left, rgba(0, 0, 0, 0.2) 10%, rgba(0, 0, 0, 0) 100%), url('<%= imagen %>');
        background-size: cover;
        background-position: center top;
        background-repeat: no-repeat;
    }

    .items {
        width: 100%;
        height: 20%;
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0));
        display: flex;
    }

    .logo {
        width: 40%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        user-select: none;
    }

    .logo img {
        height: 90%;
    }

    .logo h1 {
        color: white;
        font-weight: 400;
    }

    .menu {
        width: 40%;
        height: 100%;
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        padding-right: 30px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .menu a {
        color: white;
        font-weight: 200;
        font-size: 20px;
        text-decoration: none;
        transition: transform 0.5s;
    }

    .menu a:hover {
        transform: scale(1.15);
    }

    .texto {
        position: absolute;
        right: 18%;
        top: 45%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-end;
        height: 200px;
        width: 800px;
        user-select: none;
    }

    .texto h1 {
        color: white;
        font-style: italic;
    }

    .textoFino {
        font-weight: 200;
        font-size: 55px;
        margin-bottom: -20px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
    }

    .textoGrueso {
        font-weight: 700;
        font-size: 65px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }


    /* RESPONSIVE */

    .menu-toggle {
        display: none;
        flex-direction: column;
        cursor: pointer;
        color: rgb(255, 255, 255);
        /* display: none; */
    }

    #check {
        display: none;
    }

    .menu-toggle i {
        font-size: 24px;
    }

    @media (max-width: 1200px) {

        .navbar {
            width: 100%;
            height: 300px;
        }

        .menu {
            position: fixed;
            height: 100vh;
            width: 100%;
            left: -100%;
            background: rgba(0, 0, 0, 0.8);
            z-index: 8;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
            transition: all 0.5s;
        }

        .menu a {
            padding: 10px 0;
            text-align: center;
            width: 100%;
            margin: 10px 0;
        }

        .separador {
            height: 130px;
        }

        .menu-toggle {
            display: flex;
            position: absolute;
            right: 50px;
            top: 35px;
            z-index: 9;
        }

        .logo {
            position: absolute;
            left: 20px;
            top: 30px;
            height: 40px;
        }

        .logo img {
            height: 50px;
        }

        .texto {
            top: 80px
        }

        #check:checked~.menu {
            left: 0;
        }

    }

    @media (max-width: 700px) {


        .navbar {
            width: 100%;
            height: 200px;
        }

        .menu a {
            font-size: 27px;
        }

        .texto {
            right: 20px;
            min-width: 600px;
            top: 30px
        }

        .textoFino {
            font-size: 25px;
            margin-bottom: -20px;
        }

        .textoGrueso {
            font-size: 40px;
        }
    }
</style>
<nav>
    <div class="navbar">
        <div class="items">
            <div class="logo">
                <img src="/navbar/LogoIrrigar.png" alt="Logo de la empresa">
                <h1>IRRIGAR</h1>
            </div>
            <input type="checkbox" name="check" id="check">
            <label for="check" class="menu-toggle"><i class="fas fa-bars"></i></label>

            <div class="menu">
                <div class="separador"></div>
                <a href="#">Inicio</a>
                <a href="#">Quienes Somos</a>
                <a href="#">Proyectos</a>
                <a href="#">Contacto</a>
            </div>
        </div>
        <div class="texto">
            <h1 class="textoFino">
                <%= textoFino %>
            </h1>
            <h1 class="textoGrueso">
                <%= textoGrueso %>
            </h1>
        </div>
    </div>
</nav>

